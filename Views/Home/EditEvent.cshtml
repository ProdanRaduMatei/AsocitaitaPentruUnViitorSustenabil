@model AsocitaitaPentruUnViitorSustenabil.Domain.Eveniment

@{
    ViewData["Title"] = "Editeaza Eveniment";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="EditEvent" asp-controller="Home" method="post">
    <div class="form-group">
        <label for="Id">Eveniment ID</label>
        <input type="text" class="form-control" id="Id" name="Id" required />
    </div>
    <div class="form-group">
        <label for="Nume">Nume Eveniment</label>
        <input type="text" class="form-control" id="Nume" name="Nume" required />
    </div>
    <button type="submit" class="btn btn-primary">Editeaza Eveniment</button>
</form>